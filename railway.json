{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "RAILPACK",
        "watchPatterns": [
            "src/bovie/**",
            "uv.lock",
            "pyproject.toml",
            ".python-version"
        ],
        "buildCommand": "uv sync --frozen --no-dev"
    },
    "deploy": {
        "startCommand": "python3 -m bovie.main",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 5,
        "cronSchedule": "12 */2 * * *",
        "region": "Europe-west4-drams3a"
    }
}