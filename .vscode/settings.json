{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true
    },
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
    },
    "[dockerfile]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.defaultFormatter": "ms-azuretools.vscode-containers"
    },
    "makefile.configureOnOpen": false,
}